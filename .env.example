PUBLIC_MAX_IMAGE_SIZE=52428800 # 50 MB

PRIVATE_REVEAL_SEA=true # Start with sea, smaller islands and coastline revealed
PRIVATE_DM_TOKEN=XXXXX  # Token (password) required to create new campaigns
BODY_SIZE_LIMIT=$PUBLIC_MAX_IMAGE_SIZE
DATABASE_URL=postgresql://user:password@localhost:5432/chult

IMGPROXY_KEY=long_string  # Generate with: openssl rand -hex 64
IMGPROXY_SALT=long_string # Generate with: openssl rand -hex 64
IMGPROXY_URL=http://localhost:8080  # For local dev (or http://imgproxy:8080 for Docker internal)

POSTGRES_HOST=chult-postgres
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=chult

# Docker Build Optimizations
DOCKER_BUILDKIT=1                 # Enable modern build engine (parallel stages, better caching)
COMPOSE_DOCKER_CLI_BUILD=1        # Use BuildKit with docker compose
BUILDKIT_PROGRESS=plain           # Detailed build output